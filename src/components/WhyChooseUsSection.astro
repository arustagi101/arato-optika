---
import { whyChooseUsFeatures, sectionContent } from '../data/index';

// SVG icon mapping - add more as needed
const getIconSvg = (iconName: string) => {
  const icons = {
    'circle-check': '<svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor"><circle cx="12" cy="12" r="8" stroke-width="2"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16l4-4 4 4"/></svg>',
    'stethoscope': '<svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18V7a2 2 0 012-2h8a2 2 0 012 2v11M6 18a6 6 0 0012 0"/></svg>',
    'eye': '<svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor"><circle cx="12" cy="12" r="3" stroke-width="2"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5s8.268 2.943 9.542 7c-1.274 4.057-5.065 7-9.542 7s-8.268-2.943-9.542-7z"/></svg>',
    'discount-check': '<svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/></svg>'
  };
  
  return icons[iconName] || icons['circle-check']; // Default to circle-check if icon not found
};
---

<section class="py-20 bg-base-200">
  <div class="container mx-auto px-4">
    <div class="text-center mb-14">
      <h2 class="text-3xl md:text-4xl font-bold mb-3">{sectionContent.whyChooseUs.title}</h2>
      <p class="text-base-content/70 max-w-xl mx-auto">{sectionContent.whyChooseUs.description}</p>
    </div>
    
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
      {whyChooseUsFeatures.map(feature => (
        <div class="card bg-base-100 shadow-md hover:shadow-lg transition-shadow duration-300">
          <div class="card-body items-center text-center">
            <div class="bg-primary/10 p-3 rounded-full mb-4">
              <Fragment set:html={getIconSvg(feature.icon)} />
            </div>
            <h3 class="card-title">{feature.title}</h3>
            <p>{feature.description}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
